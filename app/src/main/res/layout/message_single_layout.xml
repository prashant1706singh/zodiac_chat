<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/message_text_background"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:layout_weight="0"
        android:src="@drawable/contact_blue" />

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="66dp"
        android:autoSizeMaxTextSize="@dimen/speech_bubble_corners"
        android:fontFamily="@font/product_sans"
        android:padding="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Message Text"
        android:textAlignment="textStart"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="28dp"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/message_displayname_layout"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_profile_layout"
        android:layout_below="@+id/message_profile_layout"
        android:fontFamily="@font/product_sans"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/Teal"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/message_time_layout"
        android:layout_width="45dp"
        android:layout_height="9dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_profile_layout"
        android:layout_marginEnd="12dp"
        android:text="00:00"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="7sp" />


</RelativeLayout>